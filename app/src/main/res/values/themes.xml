<resources>
  <!-- Base application theme. -->
  <style name="Theme.NewApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/conduit_green</item>
    <item name="colorPrimaryVariant">@color/conduit_green_dark</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/conduit_gray</item>
    <item name="colorSecondaryVariant">@color/conduit_gray_dark</item>
    <item name="colorOnSecondary">@color/white</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/conduit_green_transparent</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.NewApp.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.NewApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.NewApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>